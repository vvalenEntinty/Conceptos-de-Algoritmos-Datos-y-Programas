program ej;
var
	max,min,total,num:integer;
begin
	max:=-9999;
	min:=9999;
	total:=0;
	repeat 
		writeln('ingrese un numero');
		readln(num);
		if(num<min) then
			min:=num;
		if(num>max) then
			max:=num;
		total:=total +num;
	
	until (num= 100);
	writeln('minimo: ',min,' maximo :',max,' total de la suma: ',total);
end.
