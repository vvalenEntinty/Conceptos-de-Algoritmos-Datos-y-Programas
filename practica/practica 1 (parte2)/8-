program ej;
var
i,ventaxdia:integer;
total,monto:real;
begin
total:=0;
	for i:= 1 to 4 do begin
		ventaxdia:=0;
		writeln('Ingresar el monto: ');
		readln(monto);
		while (monto <> 0) do begin
			ventaxdia:=ventaxdia + 1;
			total:=total + monto;
			writeln('Ingresar el monto: ');
			readln(monto);
		end;
		writeln('ventas en el dia: ',ventaxdia);
	end;
	writeln('total del monto en todo el mes: ',total:0:2);
end.
